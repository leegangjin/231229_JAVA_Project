package day13;

import java.util.Scanner;

/* product 클래스 생성 : 상품을 등록하는 클래스
 * 상품명 , 가격 멤버변수
 * 상품 추가 메서드
 * 상품 출력 메서드(toString 생성가능)
 */
class Product {
	//멤버변수 선언
	private String item;
	private int price;
	public Product() {}
	public String getItem() {
		return item;
	}
	public void setItem(String item) {
		this.item = item;
	}
	public int getPrice() {
		return price;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public Product(String item,int price) {
		this.item=item;
		this.price=price;
	}
	
	public String toString() {
		return  "상품명 :"+item+"("+price+")";
	}
	  public void printitem() {
		  
			  System.out.println("상품명 :"+item+"("+price+")");
		  
	  }

}	



public class 과제 {

	public static void main(String[] args) {
		//상품을 10개 등록가능한 배열 생성
		//스케너를 이용하여 상품을 등록받기
		//등록한 상품 출력
		
		Product pr =new Product();
		String  item[] =new String[10];
		int price [] =new int [10];
		Scanner scan =new Scanner(System.in);
		int cnt =0;
		 
		if(cnt >10) {
			System.out.println("추가 등록 불가");
		}for(int i=0; i < item.length; i++) {
			System.out.println("상품을 등록해주세요.");
			String itemname = scan.next();
			System.out.println("상품가격을 등록해주세요.");
		    int pricepay = scan.nextInt();
		    itemname=item[i];
		    pricepay=price[i];
		    cnt++;
		}
		pr.printitem();
		
		
		
		
		scan.close();
		
		

	}

}
