package day13;
/* product 클래스 생성 : 상품을 등록하는 클래스
 * 상품명 , 가격 멤버변수
 * 상품 추가 메서드
 * 상품 출력 메서드(toString 생성가능)
 */
class Product {
	//멤버변수 선언
	private String item; //상품명
	private int price; //상품가격
	
	public Product (String item, int price) {
		this.item=item;
		this.price=price;
	}
	public String toString() {
		return  "상품명 :"+item+"("+price+")";
	}
	
}	



public class 과제 {

	public static void main(String[] args) {
		//상품을 10개 등록가능한 배열 생성
		//스케너를 이용하여 상품을 등록받기
		//등록한 상품 출력
		Product pr =new Product("고구마",2000) ;
		

	}

}
